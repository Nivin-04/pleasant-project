---
import Layout from '../layouts/Layout.astro'
import ProductGallery from '../components/ProductGallery.astro'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const product = {
  title: 'Peter Sommer collab upcycled shirt',
  price: '649,00 DKK',
  size: ['S', 'M', 'L'],
  description: [
    'Unik og komfortabel.',
    'Minimal miljøpåvirkning.',
    'Mindre spild. Mere natur.',
    'Dit valg gør en forskel.',
  ],
  images: [
    '/images/test.jpg',
    '/images/test.jpg',
  ]
}
---
<Layout>
    <head>
      <link rel="stylesheet" href="/global.css" />
      <link rel="stylesheet" href="/product.css" />
    </head>
    <Header />
    <main class="product-page">
      <div class="product-gallery">
        <div class="thumbnails">
          {product.images.map(img => (
            <img src={img} alt={product.title} class="thumb" />
          ))}
        </div>
        <img src={product.images[0]} alt={product.title} class="main-image" />
      </div>
  
      <div class="product-info">
        <div class="trust-badges">
          <span>⭐ 4.7 på Trustpilot</span>
          <span>🚚 1-3 dags levering</span>
        </div>
  
        <h1>{product.title}</h1>
        <p class="price">{product.price}</p>
  
        <ul class="description-list">
          {product.description.map(line => <li>{line}</li>)}
        </ul>
  
        <label for="size">Size:</label>
        <select id="size">
          {product.size.map(s => <option value={s}>{s}</option>)}
        </select>
  
        <button class="add-to-bag">Add to Bag</button>
  
        <div class="shipping-info">
          <p>✅ Pickup available at Pleasant office<br />Usually ready in 24 hours</p>
          <p>📦 Free shipping over 399 kr & free returns</p>
          <p>📏 Unsure about sizing? Check our <a href="#">Style guide</a></p>
          <p>❓ <a href="#">Spørgsmål til produktet?</a></p>
        </div>
      </div>
    </main>
  </Layout>

